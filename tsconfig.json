{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020", "ES2022.Error"],

    "rootDir": ".",
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "types": ["node"]
  },
  "include": [
    "index.ts",
    "credentials/**/*",
    "nodes/**/*",
    "nodes/**/*.json",
    "package.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
